{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python Debugger: FastAPI (worker-py)",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "cwd": "${workspaceFolder}/worker-py",
      "args": [
        "src.app:app",
        "--host",
        "127.0.0.1",
        "--port",
        "8000",
        "--reload"
      ],
      "env": {
        "PYTHONPATH": "${workspaceFolder}/worker-py"
      },
      "justMyCode": false
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch Chrome against localhost",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}"
    }
  ],
  "compounds": [
    {
      "name": "Full Stack Debug (FastAPI + Chrome)",
      "configurations": [
        "Python Debugger: FastAPI (worker-py)",
        "Launch Chrome against localhost"
      ]
    }
  ]
}
